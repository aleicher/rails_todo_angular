<h1>Todos</h1>
<div ng-controller="TodosCtrl">
<form ng-submit="createTodo()">
  <input type="text" ng-model='newTodo.title' placeholder="Enter todo title">
  <input type="text" ng-model='newTodo.description' placeholder="Enter todo description">
  <input type="date" ng-model='newTodo.due_date'>
  <input type="submit" value="Add">
</form>
<button ng-click="reloadTodos()">Reload</button>
  <ul>
    <li ng-repeat="todo in todos">
      <input type="checkbox" ng-model="todo.done" ng-change="updateTodo(todo)"/>
      <span ng-hide="editing" ng-click="editing = true">{{todo.title}}, {{todo.description}}</span>
      <form ng-show="editing" ng-submit="editing = false; updateTodo(todo)">
        <input type="text" ng-model="todo.title" ng-required/>
        <input type="text" ng-model="todo.description" ng-required/>
        <button type="submit">Save</button>
      </form>
    </li>
  </ul>
</div>
